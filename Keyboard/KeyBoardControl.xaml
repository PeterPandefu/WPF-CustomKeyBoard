                        ShiftKeyWord="|"
                        Tag="226" />
                </Grid>

                <Grid Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="2.5*" />
                    </Grid.ColumnDefinitions>

                    <local:ToggonKeyboardKey
                        x:Name="btn_CapsLock"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="2"
