                    <local:ToggonKeyboardKey
                        x:Name="rightShift"
                        Grid.Column="14"
                        Margin="2"
                        HorizontalAlignment="Right"
                        Click="ToggonBtn_Click"
                        Content="Shift"
                        KeyboardKeyType="Longer"
                        Tag="161" />

                </Grid>
                <Grid Grid.Row="4">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
