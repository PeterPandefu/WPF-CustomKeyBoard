                        Tag="56" />

                    <local:KeyboardKey
                        Grid.Column="10"
                        Margin="2"
                        Content="9"
                        ShiftKeyWord="("
                        Tag="57" />

                    <local:KeyboardKey
                        Grid.Column="11"
                        Margin="2"
                        Content="0"
                        ShiftKeyWord=")"
                        Tag="48" />

                    <local:KeyboardKey
                        Grid.Column="12"
                        Margin="2"
                        Content="-"
                        ShiftKeyWord="_"
                        Tag="189" />

                    <local:KeyboardKey
                        Grid.Column="13"
                        Margin="2"
                        Content="="
                        ShiftKeyWord="+"
                        Tag="187" />
                    <local:KeyboardKey
                        Grid.Column="14"
                        Grid.ColumnSpan="2"
                        Margin="2"
                        Content="Backspace"
                        KeyboardKeyType="Long"
                        Tag="8" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <local:KeyboardKey
                        Margin="2"
                        Content="Tab"
                        KeyboardKeyType="Long"
                        Tag="9" />

                    <local:KeyboardKey
                        Grid.Column="1"
                        Margin="2"
                        Content="q"
                        Tag="81" />

                    <local:KeyboardKey
                        Grid.Column="2"
                        Margin="2"
