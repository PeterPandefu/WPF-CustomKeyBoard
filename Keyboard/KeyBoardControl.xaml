                        Tag="79" />

                    <local:KeyboardKey
                        Grid.Column="10"
                        Margin="2"
                        Content="p"
                        Tag="80" />

                    <local:KeyboardKey
                        Grid.Column="11"
                        Margin="2"
                        Content="["
                        ShiftKeyWord=" {"
                        Tag="219" />

                    <local:KeyboardKey
                        Grid.Column="12"
                        Margin="2"
                        Content="]"
                        ShiftKeyWord="}"
                        Tag="221" />

                    <local:KeyboardKey
                        Grid.Column="13"
                        Grid.ColumnSpan="2"
                        Margin="2"
                        Content="\"
