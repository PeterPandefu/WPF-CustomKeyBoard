                        Tag="37" />

                    <local:KeyboardKey
                        Grid.Row="3"
                        Grid.Column="8"
                        Margin="2"
                        Content="↓"
                        Tag="40" />

                    <local:KeyboardKey
                        Grid.Row="3"
                        Grid.Column="9"
                        Margin="2"
