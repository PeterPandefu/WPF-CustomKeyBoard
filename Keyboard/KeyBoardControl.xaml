                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>



                    <local:ToggonKeyboardKey
                        x:Name="switchEnOrCh"
                        Grid.Column="0"
                        Margin="2"
                        Click="switchEnOrCh_Click"
                        Tag="">
                        <local:ToggonKeyboardKey.Content>
                            <Grid>
                                <Image Width="35" Source="{StaticResource switchEnOrCh_DrawingImage}" />
                            </Grid>
                        </local:ToggonKeyboardKey.Content>
                    </local:ToggonKeyboardKey>

                    <local:ToggonKeyboardKey
                        x:Name="leftCtrl"
                        Grid.Column="1"
                        Margin="2"
                        Click="ToggonBtn_Click"
                        Content="Ctrl"
                        Tag="162" />

                    <local:ToggonKeyboardKey
                        Grid.Column="2"
                        Margin="2"
                        Click="ToggonBtn_Click"
                        Content="Win"
                        IsEnabled="False"
                        Tag="91" />

                    <local:ToggonKeyboardKey
                        x:Name="leftAlt"
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="2"
                        Click="ToggonBtn_Click"
                        Content="Alt"
                        Tag="164" />

                    <local:KeyboardKey
                        Grid.Column="4"
                        Margin="2"
                        Content="Space"
                        KeyboardKeyType="Longest"
                        Tag="32" />

                    <local:ToggonKeyboardKey
                        x:Name="rightAlt"
                        Grid.Row="2"
                        Grid.Column="5"
                        Margin="2"
                        Click="ToggonBtn_Click"
                        Content="Alt"
                        Tag="165" />

                    <local:ToggonKeyboardKey
                        x:Name="rightCtrl"
                        Grid.Row="2"
                        Grid.Column="6"
                        Margin="2"
                        Click="ToggonBtn_Click"
                        Content="Ctrl"
                        Tag="163" />

                    <Grid Grid.Column="7" />
                    <local:KeyboardKey
                        Grid.Row="3"
                        Grid.Column="7"
                        Margin="2"
