<UserControl
    x:Class="CustomKeyboard.KeyBoardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CustomKeyboard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1400"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Border
            Padding="10"
            Background="#dadada"
            CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="320"
                    Opacity="0"
                    RenderingBias="Performance"
                    ShadowDepth="1"
                    Color="Gray" />
            </Border.Effect>
            <Grid x:Name="boardGrid" ButtonBase.Click="Grid_Click">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <local:KeyboardKey
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="2"
                        Content="Esc"
                        IsEnabled="False"
                        Tag="23" />

                    <local:KeyboardKey
                        Grid.Column="1"
                        Margin="2"
                        Content="`"
                        ShiftKeyWord="~"
                        Tag="192" />

                    <local:KeyboardKey
                        Grid.Column="2"
                        Margin="2"
                        Content="1"
                        ShiftKeyWord="!"
                        Tag="49" />

                    <local:KeyboardKey
                        Grid.Column="3"
                        Margin="2"
                        Content="2"
                        ShiftKeyWord="@"
                        Tag="50" />

                    <local:KeyboardKey
                        Grid.Column="4"
                        Margin="2"
                        Content="3"
                        ShiftKeyWord="#"
                        Tag="51" />

                    <local:KeyboardKey
                        Grid.Column="5"
                        Margin="2"
                        Content="4"
                        ShiftKeyWord="$"
                        Tag="52" />

                    <local:KeyboardKey
                        Grid.Column="6"
                        Margin="2"
                        Content="5"
                        ShiftKeyWord="%"
                        Tag="53" />

                    <local:KeyboardKey
                        Grid.Column="7"
                        Margin="2"
                        Content="6"
                        ShiftKeyWord="^"
                        Tag="54" />

                    <local:KeyboardKey
                        Grid.Column="8"
                        Margin="2"
                        Content="7"
                        ShiftKeyWord="&amp;"
                        Tag="55" />

                    <local:KeyboardKey
                        Grid.Column="9"
                        Margin="2"
                        Content="8"
