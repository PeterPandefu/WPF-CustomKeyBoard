                        Tag="222" />

                    <local:KeyboardKey
                        Grid.Row="1"
                        Grid.Column="14"
                        Margin="2"
                        Content="Enter"
                        KeyboardKeyType="Longer"
                        Tag="13" />


                </Grid>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="2.5*" />
                    </Grid.ColumnDefinitions>

                    <local:ToggonKeyboardKey
                        x:Name="leftShift"
                        Grid.Column="0"
                        Margin="2"
                        HorizontalAlignment="Left"
                        Click="ToggonBtn_Click"
                        Content="Shift"
                        KeyboardKeyType="Longer"
                        Tag="160" />

                    <local:KeyboardKey
                        Grid.Column="1"
                        Margin="2"
                        Content="z"
                        Tag="90" />

                    <local:KeyboardKey
                        Grid.Column="2"
                        Margin="2"
                        Content="x"
                        Tag="88" />

                    <local:KeyboardKey
                        Grid.Column="3"
                        Margin="2"
                        Content="c"
                        Tag="67" />


                    <local:KeyboardKey
                        Grid.Row="2"
                        Grid.Column="4"
                        Margin="2"
                        Content="v"
                        Tag="86" />

                    <local:KeyboardKey
                        Grid.Row="2"
                        Grid.Column="5"
                        Margin="2"
